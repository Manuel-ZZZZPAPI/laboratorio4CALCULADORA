<CustButton@Button>:
    font_size: '28sp'
    background_color: (0.2, 0.6, 0.8, 1)
    background_normal: ''
    color: (1, 1, 1, 1)
    bold: True
    size_hint: (1, 1)
    canvas.before:
        Color:
            rgba: self.background_color
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [12]

<Calculadora>:
    orientation: "vertical"
    padding: 15
    spacing: 10

    BoxLayout:
        size_hint_y: 0.2
        TextInput:
            id: entry
            font_size: '42sp'
            halign: "right"
            multiline: False
            background_color: (0.15, 0.15, 0.15, 1)
            foreground_color: (1, 1, 1, 1)
            cursor_color: (1, 0.5, 0, 1)

    GridLayout:
        cols: 4
        spacing: 8
        size_hint_y: 0.8

        CustButton:
            text: "7"
            on_press: entry.text += self.text
        CustButton:
            text: "8"
            on_press: entry.text += self.text
        CustButton:
            text: "9"
            on_press: entry.text += self.text
        CustButton:
            text: "/"
            background_color: (0.9, 0.4, 0.2, 1)
            on_press: entry.text += self.text

        CustButton:
            text: "4"
            on_press: entry.text += self.text
        CustButton:
            text: "5"
            on_press: entry.text += self.text
        CustButton:
            text: "6"
            on_press: entry.text += self.text
        CustButton:
            text: "*"
            background_color: (0.9, 0.4, 0.2, 1)
            on_press: entry.text += self.text

        CustButton:
            text: "1"
            on_press: entry.text += self.text
        CustButton:
            text: "2"
            on_press: entry.text += self.text
        CustButton:
            text: "3"
            on_press: entry.text += self.text
        CustButton:
            text: "-"
            background_color: (0.9, 0.4, 0.2, 1)
            on_press: entry.text += self.text

        CustButton:
            text: "0"
            on_press: entry.text += self.text
        CustButton:
            text: "."
            on_press: entry.text += self.text
        CustButton:
            text: "+"
            background_color: (0.9, 0.4, 0.2, 1)
            on_press: entry.text += self.text
        CustButton:
            text: "="
            background_color: (0.1, 0.8, 0.4, 1)
            on_press: root.calcular()

        CustButton:
            text: "C"
            background_color: (0.9, 0.2, 0.2, 1)
            on_press: entry.text = ""
        CustButton:
            text: "^"
            on_press: entry.text += self.text
        CustButton:
            text: "âˆš"
            on_press: entry.text += self.text
        CustButton:
            text: "j"
            on_press: entry.text += self.text
